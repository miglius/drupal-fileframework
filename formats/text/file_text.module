    'wordnet:characters' => array('name' => t('Characters')),
    'wordnet:words' => array('name' => t('Words')),
    'wordnet:lines' => array('name' => t('Lines')),
  );
  return $info;
}

/**
 * Implementation of hook_metadata_parse().
 */
function file_text_metadata_parse($filename, $mimetype) {
  if (!array_key_exists($mimetype, file_text_mime_types()))
    return NULL;

  $text = file_get_contents($filename);
  return array(
    'wordnet:characters' => array((int)(drupal_strlen($text) - substr_count($text, ' ') - $lines)),
    'wordnet:words'      => array((int)str_word_count($text)),
    'wordnet:lines'      => array((int)substr_count($text, "\n")),
  );
}

//////////////////////////////////////////////////////////////////////////////
// MIME handlers

/**
 * Generates a text preview.
 */
function file_text_text_generate($file) {
  if (!isset($file->parent)) $file->parent = $file->uri;

  $metadata = $file->converted ? file_metadata_extract($file->filepath, $file->filemime) : rdf_normalize(rdf_query($file->uri));

  if ($converted || $file->converted) {
    $file->metadata = array_merge(array(
      'dc:creator' => array($file->handler ? $file->handler : 'file_text_text'),
    ), $metadata);

    // Save preview to the bitcache and RDF.
    if (!file_data_save($file)) {
      return FALSE;
    }

    $file->converted = TRUE;

    watchdog('file_text', 'The %mime preview was generated for the %uri.', array('%mime' => $file->filemime, '%uri' => $file->uri));
  }
  else if (FILE_TEXT_CODE) {
    if (module_exists('file_convert') && !$file->noconvert) {
      // Convert the file.
      if ($converted = file_convert($file, array('file_text_code'), "{code2html} --fallback ruby [in_file] [out_file]")) {
        $file->filepath = $converted;

        // Extract metadata.
        $metadata = file_metadata_extract($converted, $file->filemime);
        $file->metadata = array_merge(array(
          'dc:creator' => array('file_text_code'),
        ), $metadata);

        // Save preview to the bitcache and RDF.
        if (!file_data_save($file)) {
          return FALSE;
        }

        watchdog('file_text', 'The %mime preview %handler was generated for the %uri.', array('%mime' => $file->filemime, '%handler' => 'file_text_code', '%uri' => $file->uri));
      }
      else {
        watchdog('file_text', 'A preview of type %mime was not created for the file %file, %uri. File conversion failed.', array('%mime' => $file->filemime, '%file' => $file->filename, '%uri' => $file->uri), WATCHDOG_ERROR);
      }
    }
  }
  return TRUE;
}

/**
 * Implements a plain text handler.
 */
function file_text_text_render($uri, $options = array()) {
  $options = array_merge($options, _file_text_render_options($uri, $options));
  return theme('file_text_text_render', $options);
}

/**
 * Implements a code text handler.
 */
function file_text_code_render($uri, $options = array()) {
  $options = array_merge($options, _file_text_render_options($uri, $options));
  return theme('file_text_code_render', $options);
}

//////////////////////////////////////////////////////////////////////////////
// Auxiliary functions

/**
 * Renders options for the text display.
 */
function _file_text_render_options($uri, $options = array()) {
  $hash = file_get_hash($uri);
  $text = bitcache_get_contents($hash);
  if (FILE_TEXT_PREVIEW_LINES > 0) {
    $text = explode("\n", $text);
    $lines = count($text);
    if ($lines > FILE_TEXT_PREVIEW_LINES) {
      for ($i = FILE_TEXT_PREVIEW_LINES; $i < $lines; $i++) {
        unset($text[$i]);
      }
      $append = "\n". FILE_TEXT_PREVIEW_STRING;
    }
    $text = implode("\n", $text);

  }

  return array_merge($options, compact('hash', 'text', 'append'));
}

