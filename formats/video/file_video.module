/**
 * Generates a flash_swf preview.
 */
function file_video_flash_swf_generate($file) {
  if (!isset($file->parent)) $file->parent = $file->uri;

  $metadata = $file->converted ? file_metadata_extract($file->filepath, $file->filemime) : rdf_normalize(rdf_query($file->uri));

  if ($file->converted) {
    $file->metadata = array_merge(array(
      'dc:creator' => array($file->handler ? $file->handler : 'file_video_flash_swf'),
    ), $metadata);

    // Save preview to the bitcache and RDF.
    if (!file_data_save($file)) {
      return FALSE;
    }

    $file->converted = TRUE;

    watchdog('file_video', 'The %mime preview was generated for the %uri.', array('%mime' => $file->filemime, '%uri' => $file->uri));
  }
  return TRUE;
}

/**
 * Generates a flash_flv preview.
 */
function file_video_flash_flv_generate($file) {
  if (!isset($file->parent)) $file->parent = $file->uri;

  $metadata = $file->converted ? file_metadata_extract($file->filepath, $file->filemime) : rdf_normalize(rdf_query($file->uri));

  if ($file->converted) {
    $file->metadata = array_merge(array(
      'dc:creator' => array($file->handler ? $file->handler : 'file_video_flash_flv'),
    ), $metadata);

    // Save preview to the bitcache and RDF.
    if (!file_data_save($file)) {
      return FALSE;
    }

    watchdog('file_video', 'The %mime preview was generated for the %uri.', array('%mime' => $file->filemime, '%uri' => $file->uri));

    // Create a flash thumbnail image.
    file_generate_secondary_previews('file_video', $file, 'image/jpeg', 'file_video_flash_image');

    $file->converted = TRUE;
  }
  return TRUE;
}

/**
 * Generates a flash_image preview.
 */
function file_video_flash_image_generate($file) {
  if (!isset($file->parent)) $file->parent = $file->uri;

  $metadata = $file->converted ? file_metadata_extract($file->filepath, $file->filemime) : rdf_normalize(rdf_query($file->uri));

  if ($file->converted) {
    //$file->noconvert = TRUE;
    $file->handler = 'file_video_flash_image';

    if (function_exists('file_image_preview_generate') && !file_image_preview_generate($file)) {
      watchdog('file_video', 'A preview of type %mime was not created for the file %file, %uri.', array('%mime' => 'image/jpeg', '%file' => $file->filename, '%uri' => $file->uri), WATCHDOG_ERROR);
      return FALSE;
    }
  }

  watchdog('file_video', 'The %mime preview was generated for the %uri.', array('%mime' => $file->filemime, '%uri' => $file->uri));
  return TRUE;
}

